{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <style>
        .btn {
            display: inline-block;
            height: 50px;
            line-height: 50px;
            position: relative;
            border: 1px solid white;
            padding: 0 1rem;
        }
    </style>
{% endblock %}

{% block title %}
    Ссылки
{% endblock %}

{% block body %}
    <br>
    <br>
    {% if code is defined %}
        <a class="short-link" href="{{ url('view_links') }}{{ code }}">{{ url('view_links') }}{{ code }}</a>
    {% endif %}
    <form action="{{ path('generate_links') }}" method="post">
        <div class="form-group">
            <input type="url" class="form-control" name="url">
        </div>
        <button type="submit" class="btn btn-primary">Сократить</button>
    </form>
{% endblock %}